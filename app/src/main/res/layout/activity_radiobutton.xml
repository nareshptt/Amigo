<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".RadiobuttonActivity">

    <RadioButton
        android:id="@+id/youtube"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="27dp"
        android:text="Youtube"
        app:layout_constraintBottom_toTopOf="@+id/insta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/insta"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="28dp"
        android:text="Instagram"
        app:layout_constraintBottom_toTopOf="@+id/facbook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/facbook"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="37dp"
        android:text="Facbook"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="40dp"
        android:text="What would you like ?"
        android:textColor="#FFEB3B"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/youtube"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="42dp"
        android:text="Give me feedback on my App"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/feedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="51dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="66dp"
        android:text="Give Feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:layout_width="121dp"
        android:layout_height="215dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>